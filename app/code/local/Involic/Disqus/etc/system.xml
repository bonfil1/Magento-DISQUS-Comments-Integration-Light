<config>
    <tabs>
        <involic translate="label">
            <label>Involic Extensions</label>
            <sort_order>800</sort_order>
        </involic>
    </tabs>
    <sections>
        <disqus translate="label" module="testimonials">
            <class>separator-top</class>
            <label>DISQUS Integration </label>
            <tab>involic</tab>
            <frontend_type>text</frontend_type>
            <sort_order>400</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General Configuration</label>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <disqus_short_name translate="label">
                            <label>Disqus short name</label>
                            <comment>Website unique identifier on Disqus Comments (e.q. forum shortname). </comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </disqus_short_name>
                        <disqus_debug_mode>
                            <label>Debug mode</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </disqus_debug_mode>
                    </fields>
                </general>
            </groups>
        </disqus>
    </sections>
</config>